{
	"name": "crckc-bible-together",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --port=4000",
		"build": "pnpm run getFirestoreHelpers && vite build",
		"vbuild": "vite build",
		"preview": "vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"getFirestoreHelpers": "mkdir -p static/__/auth && mkdir -p static/__/firebase && curl -o 'static/__/auth/#1' 'https://bibletogether.firebaseapp.com/__/auth/{handler.js,iframe.js,experiments.js}' && curl -o 'static/__/auth/#1.html' 'https://bibletogether.firebaseapp.com/__/auth/{handler,iframe}' && curl -o 'static/__/firebase/init.json' 'https://bibletogether.firebaseapp.com/__/firebase/init.json'",
		"emulator": "firebase emulators:start",
		"cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost'",
		"certDependencies": "sudo apt install libnss3-tools mkcert"
	},
	"devDependencies": {
		"@capacitor/cli": "^6.2.0",
		"@iconify-json/material-symbols": "^1.2.14",
		"@playwright/test": "^1.50.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@types/eslint": "^9.6.1",
		"@vite-pwa/sveltekit": "^0.6.7",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.86",
		"clsx": "^2.1.1",
		"cssnano": "^7.0.6",
		"embla-carousel-svelte": "^8.5.2",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"firebase": "^11.2.0",
		"formsnap": "2.0.0-next.1",
		"globals": "^15.14.0",
		"less": "^4.2.2",
		"lucide-svelte": "^0.453.0",
		"mode-watcher": "^0.4.1",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.19.7",
		"svelte-check": "^4.1.4",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.23.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0",
		"unplugin-icons": "^0.19.3",
		"vite": "^5.4.14",
		"vite-plugin-pwa": "^0.21.1",
		"vitest": "^2.1.9",
		"workbox-build": "^7.3.0",
		"workbox-precaching": "^7.3.0",
		"workbox-routing": "^7.3.0",
		"workbox-window": "^7.3.0",
		"zod": "^3.24.1"
	},
	"type": "module",
	"dependencies": {
		"@capacitor/android": "^6.2.0",
		"@capacitor/core": "^6.2.0",
		"jszip": "^3.10.1",
		"motion": "^10.18.0",
		"svelte-i18n": "^4.0.1",
		"svelte-persisted-store": "^0.11.0",
		"zod-i18n-map": "^2.27.0"
	}
}
